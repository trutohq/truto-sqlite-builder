{
  "name": "truto-sqlite-builder",
  "version": "0.1.0",
  "description": "Safe, zero-dependency template-literal tag for SQLite queries in any JS environment",
  "keywords": [
    "sqlite",
    "tagged template",
    "sql",
    "injection-safe",
    "javascript",
    "typescript",
    "template-literal",
    "database",
    "query-builder"
  ],
  "homepage": "https://github.com/truto/truto-sqlite-builder#readme",
  "bugs": {
    "url": "https://github.com/truto/truto-sqlite-builder/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/truto/truto-sqlite-builder.git"
  },
  "license": "MIT",
  "author": "Truto Team",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "vitest --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.9.3",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.15.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
